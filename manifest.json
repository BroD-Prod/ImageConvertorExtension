{
    "manifest_version": 3,
    "name": "NOBS Image Converter",
    "version": "1.0",
    "description": "Convert images to any pre-selected format, by drag and drop.",
    "permissions": ["storage", "contextMenus", "scripting"],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/",
        "48": "icons/",
        "128": "icons/"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}